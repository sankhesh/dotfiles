[
  {
    "defaults": {
      "link": {
        "create": "true",
        "relink": "true"
      }
    }
  },

  {
    "clean": [
      "~",
      "~/.config",
      "~/.vim"
    ]
  },

  {
    "link": {
        "~/.vimrc": "vimrc",
        "~/.vim": "vim/"
    }
  },

  {
    "shell": [
        ["git submodule update --init --recursive", "Installing submodules"],
        ["git config --global core.excludesfile ~/.vim/global_ignore", "Ignore certain filetypes from git"],
        ["vim +PluginInstall +qall", "Fetch VIM Plugins"],
        ["~/.vim/bundle/YouCompleteMe/install.py --clang-completer", "Install YouCompleteMe"]
      ]
  },

  {
    "link": {
        "~/.bash_profile": "bash_profile",
        "~/.bash_prompt": "bash_prompt",
        "~/.config/terminator": {
          "path": "config/terminator/"
        },
        "~/.zlogin": "zsh/prezto/runcoms/zlogin",
        "~/.zlogout": "zsh/zlogout",
        "~/.zprofile": "zsh/prezto/runcoms/zprofile",
        "~/.zshenv": "zsh/prezto/runcoms/zshenv",
        "~/.zshrc": "zsh/zshrc",
        "~/.zpreztorc": "zsh/zpreztorc",
        "~/.zprezto": "zsh/prezto",
        "~/.tmux.conf": "tmux.conf",
        "~/.config/flake8": "config/flake8"
    }
  }
]
